generator client {
  provider        = "prisma-client"
  output          = "../src/generated/prisma"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum JobStatus {
  PROCESSING
  COMPLETED
  FAILED
}

model User {
  id               String      @id @default(uuid())
  email            String      @unique
  hashedPassword   String
  emailVerified    Boolean     @default(false)
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  verificationTokens VerificationToken[]
  passwordResetTokens PasswordResetToken[]
}

model VerificationToken {
  id        String   @id @default(uuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([token])
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([token])
}

model Recipe {
  id          String         @id @default(uuid())
  name        String
  description String?
  status      JobStatus    @default(PROCESSING)

  prepTime    Int?
  cookTime    Int?
  servings    Int?

  ingredients RecipeIngredient[]
  instructions Instruction[]

  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

model Ingredient {
  id          String   @id @default(uuid())
  name        String
  normalized  String   @unique

  recipeIngredients RecipeIngredient[]
  nutrition Nutrition?
}

model RecipeIngredient {
  id         String           @id @default(uuid())
  recipe     Recipe           @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeId   String

  product    Ingredient @relation(fields: [productId], references: [id])
  productId  String

  quantity   Float?
  unit       String?
}

model Instruction {
  id        String  @id @default(uuid())
  recipe    Recipe  @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeId  String

  step      Int
  content   String
}

model Nutrition {
  id        String           @id @default(uuid())
  ingredient Ingredient @relation(fields: [ingredientId], references: [id])
  ingredientId      String  @unique

  caloriesPer100     Float
  caloriesUnit   String
  protein        Float?
  carbs          Float?
  fat            Float?
  fiber          Float?

  updatedAt DateTime @updatedAt
}
